01 - package com.mycompany.demo002;

public class Demo002 {
    
    public static int return_abs(int num1) {
        
        if (num1 < 0) {
            
            num1 = num1 + (-2 * num1);
            
        }

        return num1;

    }

    public static void main(String[] args) {
        
        int varnum = -10;
        int func = return_abs(varnum);
        
        System.out.println(func);
        
    }

}

