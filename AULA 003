package com.mycompany.demo002;

public class Demo002 {
    
    public static void tamanho_string(String string1) {
        
        int num;
        
        num = string1.length();
        
        System.out.println(num);
        
    }

    public static void main(String[] args) { 
        
        String string_1;
        
        string_1 = "Rafael";
        
        tamanho_string(string_1);
        
    }
    
}

